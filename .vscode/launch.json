{
  // 使用 IntelliSense 了解相关属性。
  // 悬停以查看现有属性的描述。
  // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.1.0",
  "configurations": [
    // 解决文件地址中有UTF-8字符，导致报错的问题
    {
      "type": "node",
      "request": "launch",
      "name": "Launch program node",
      "attachSimplePort": 0,
      "program": "${file}"
    },
    // TS文件编译并调试
    {
      "type": "node",
      "request": "launch",
      "name": "TS Launch Node",
      "skipFiles": ["<node_internals>/**"],
      "attachSimplePort": 0,
      "program": "${file}",
      "preLaunchTask": "tsc: -p tsconfig.json",
      "outFiles": ["!**/node_modules/**"]
    },
    {
      "name": "调试 eslint api",
      "program": "${workspaceFolder}/api-test.js",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "type": "node"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "presentation": {
        "hidden": false,
        "group": "Chrome",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch localhost",
      "configurations": ["Launch chrome Current File"],
      "preLaunchTask": "${defaultBuildTask}"
    }
  ]
}
