  "version": "0.1.0",
  "configurations": [
    {
      "name": "Launch chrome Current File",
      "type": "chrome",
      "request": "launch",
      "file": "${file}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "编译调试单个 TS 文件",
      "skipFiles": ["<node_internals>/**"],
      "attachSimplePort": 0,
      "program": "${file}",
      "preLaunchTask": "tsc: -p tsconfig.json",
      "postDebugTask": "delete ts compile files",
      "outFiles": ["!**/node_modules/**"],
      "presentation": {
        "hidden": false,
        "group": "TS",
        "order": 1
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch localhost",
      "configurations": ["Launch chrome Current File"]
    }
  ]
}
