{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "isBackground": true,
  "inputs": [
    {
      "id": "terminate",
      "type": "command",
      "command": "workbench.action.tasks.terminate",
      "args": ["terminateAll"]
    }
  ],
  "tasks": [
    {
      "label": "eslint",
      "type": "npm",
      "script": "lint",
      "group": "test",
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "markdown count",
      "type": "shell",
      "group": "build",
      "command": "node ${workspaceFolder}/frontend/node.js/examples/markdownCount.mjs",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "detail": "统计当前工作区下的 markdown 文件总字数"
    },
    {
      "label": "markdown TOC",
      "type": "shell",
      "group": "build",
      "command": "node ${workspaceFolder}/frontend/node.js/examples/markdownTOC.mjs ${file}",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "detail": "更改 markdown 目录中的导入目录"
    },
    {
      "label": "tsc: -p tsconfig.json",
      "type": "shell",
      "group": "build",
      "command": "tsc",
      "args": ["-p", "${relativeFileDirname}"],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": "$tsc",
      "detail": "编译当前文件夹下的TS文件"
    },
    {
      "label": "delete ts compile files",
      "type": "shell",
      "group": "build",
      // Remove-Item 是 PowerShell 中删除目录的命令，rm 是 bash 的命令
      "command": "Remove-Item -Recurse -Path ${relativeFileDirname}\\out",
      "osx": {
        "command": "rm -rf ${relativeFileDirname}\\out"
      },
      "linux": {
        "command": "rm -rf ${relativeFileDirname}\\out"
      },
      "presentation": {
        "echo": false,
        "reveal": "silent",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "hide": true,
      "detail": "删除当前文件夹下的TS编译文件"
    },
    {
      "label": "Terminate All Tasks",
      "command": "echo ${input:terminate}",
      "type": "shell",
      "detail": "停止所有Task"
    },
    {
      "label": "tsc watch",
      "type": "shell",
      "command": "tsc",
      "args": ["--watch", "${relativeFileDirname}"],
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "fileLocation": "relative",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+,\\d+,\\d+):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*\\d(1,2):\\d(1,2):\\d(1,2)(?:AM|PM)? - File change detected\\. Starting incremental compilation\\.\\.\\.",
          "endsPattern": "^\\s*\\d{1,2}:\\d{1,2}:\\d{1,2}(?:AM|PM)? - Compilation complete.\\. Watching for file changes\\."
        },
        "source": "typescript"
      },
      "detail": "捕获tsc编译器的错误和警告"
    }
  ]
}
